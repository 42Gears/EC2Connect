<Grid x:Class="EC2Connect.Panels.EC2Instance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="10">

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Button Grid.Row="0" Grid.Column="0" Content="Remote Desktop" Margin="10" Padding="10" Click="Rdp_Click" IsEnabled="{Binding ElementName=InstanceGrid, Path=SelectedItems.Count}" />
    <Button Grid.Row="0" Grid.Column="1" Content="Secure Shell" Margin="10" Padding="10" Click="Ssh_Click" IsEnabled="{Binding ElementName=InstanceGrid, Path=SelectedItems.Count}" />
    <Button Grid.Row="0" Grid.Column="2" Content="Secure Copy" Margin="10" Padding="10" Click="Scp_Click" IsEnabled="{Binding ElementName=InstanceGrid, Path=SelectedItems.Count}" />
    <Button Grid.Row="0" Grid.Column="3" Content="Custom Port" Margin="10" Padding="10" Click="Port_Click" IsEnabled="{Binding ElementName=InstanceGrid, Path=SelectedItems.Count}" />

    <DataGrid x:Name="InstanceGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="10"
              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
              CanUserReorderColumns="False" IsReadOnly="True" FontSize="16">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto" />
            <DataGridTextColumn Header="IpAdd" Binding="{Binding IpAdd}" Width="Auto" />
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto" />
            <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="Auto" />
            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="Auto" />
            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto" />
        </DataGrid.Columns>

    </DataGrid>
</Grid>